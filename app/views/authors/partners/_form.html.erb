<%= form_with(url: url, model: @partner, local: true) do |form| %>
  <% if @partner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@partner.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @partner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <div class="row">
      <div class="col-md-4">
        <div class="card" style="width: 20rem;">
          <div class="card-block">
            <% if @partner.new_record? %>
              <h4 class="card-title">New Partner</h4>
            <% else %>
              <h4 class="card-title">
                <b>Edit</b>
                <span class="thin-text"><%= @partner.name %></span>
              </h4>
            <% end %>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="field">
                <%= form.label :name %>
                <%= form.text_field :name, class: 'form-control' %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= form.label :logo %>
                <%= form.text_field :logo, class: 'form-control' %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= form.label :description %>
                <%= form.text_area :description, class: 'form-control' %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= form.label 'Tags' %>
                <%= form.text_area :tag_list, class: 'form-control' %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="actions">
                <%= form.submit "Save Campaign", class: "btn btn-success btn-block" %>
              </div>
            </li>
          </ul>
        </div>
        <% if @partner.persisted? %>
          <%= link_to 'Show', @partner %> |
        <% end %>
        <%= link_to 'Back', authors_partners_path %>
      </div>
      <div class="col-md-8">
        <div class="field">
          <%= form.text_area :body %>
        </div>
      </div>
    </div>
  </div>
<% end %>
