<tr>
  <td><%= link_to campaign.year, authors_campaign_path(campaign) %> Annual Campaign</td>
  <td></td>
  <% if campaign.published? %>
    <td><%= link_to 'Unpublish', unpublish_authors_campaign_path(campaign), method: :put, class: 'btn btn-sm btn-primary' %></td>
  <% else %>
    <td><%= link_to 'Publish', publish_authors_campaign_path(campaign), method: :put, class: 'btn btn-sm btn-success' %></td>
  <% end %>
  <td><%= link_to 'Edit', edit_authors_campaign_path(campaign), class: 'btn btn-sm btn-warning' %></td>
  <td><%= link_to 'Remove', authors_campaign_path(campaign), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
</tr>
