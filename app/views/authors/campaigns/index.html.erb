<% provide(:page_title, "All Campaigns") %>
<% provide(:author_campaigns, "active") %>

<div class="row">
  <div>
    <%= link_to 'New Campaign', new_authors_campaign_path, class: 'btn btn-primary' %>
  </div>
  <br>
  <br>
  <table class="table table-striped">
    <tr>
      <th colspan="5">Campaign Title</th>
    </tr>
    <%= render @campaigns %>
  </table>
</div>
<div class="apple_pagination">
  <%= will_paginate @campaigns, container: false %>
</div>
