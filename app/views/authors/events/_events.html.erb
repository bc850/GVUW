<tr>
  <td><%= link_to event.title, authors_event_path(event) %></td>
  <td></td>
  <% if event.published? %>
    <td><%= link_to 'Unpublish', unpublish_authors_event_path(event), method: :put, class: 'btn btn-sm btn-primary' %></td>
  <% else %>
    <td><%= link_to 'Publish', publish_authors_event_path(event), method: :put, class: 'btn btn-sm btn-success' %></td>
  <% end %>
  <td><%= link_to 'Edit', edit_authors_event_path(event), class: 'btn btn-sm btn-warning' %></td>
  <td><%= link_to 'Remove', authors_event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
</tr>
