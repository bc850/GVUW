<tr>
  <td><%= link_to news.title, authors_news_path(news) %></td>
  <td></td>
  <% if news.published? %>
    <td><%= link_to 'Unpublish', unpublish_authors_news_path(news), method: :put, class: 'btn btn-sm btn-primary' %></td>
  <% else %>
    <td><%= link_to 'Publish', publish_authors_news_path(news), method: :put, class: 'btn btn-sm btn-success' %></td>
  <% end %>
  <td><%= link_to 'Edit', edit_authors_news_path(news), class: 'btn btn-sm btn-warning' %></td>
  <td><%= link_to 'Remove', authors_news_path(news), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
</tr>
