<% provide(:page_title, @news.title) %>
<% provide(:author, "active") %>

<div class="container">
  <div class="row">
    <div>
      <%= link_to 'Index', authors_news_index_path, class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Edit', edit_authors_news_path(@news), class: 'btn btn-sm btn-warning' %>
      <%= link_to 'Remove', authors_news_path(@news), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1><%= @news.title %></h1>
    <div class="border-top border-bottom">
      <p class="published mt-3"><%= @news.display_day_published %></p>
    </div>
    <div class="border-bottom">
      <p class="tags mt-3"><%= raw @news.tags.map { |t| link_to t.name, news_index_path(tag: t.name) }.join(', ') %></p>
    </div>
    <div class="news_body mt-3">
      <%= @news.body.html_safe %>
    </div>
  </div>
</div>
