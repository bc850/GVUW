<%= form_with(url: url, model: organization, local: true) do |form| %>
  <% if organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(organization.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row pb-3">
    <%= render 'authors/navigation/navigation_bar' %>
    <div class="col-md-8">
      <div class="card" style="width: 100%;">
        <div class="card-block">
          <h4 class="card-title ml-3 mt-2">
            <b>Edit</b>
            <span class="thin-text"><%= @organization.name %></span>
          </h4>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="field">
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :address %>
              <%= form.text_field :address, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :city %>
              <%= form.text_field :city, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :state %>
              <%= form.text_field :state, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :zip %>
              <%= form.text_field :zip, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :phone %>
              <%= form.text_field :phone, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :email %>
              <%= form.email_field :email, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :latitude %>
              <%= form.text_field :latitude, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :longitude %>
              <%= form.text_field :longitude, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label "Google Maps API Key" %>
              <%= form.text_field :map_api, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label "Logo URL" %>
              <%= form.text_field :logo, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="actions">
              <%= form.submit "Save Organization", class: "btn btn-success btn-block" %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
