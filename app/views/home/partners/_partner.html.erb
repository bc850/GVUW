<div class="partners container py-3">
  <div class="card">
    <div class="row ">
      <div class="col-md-4">
        <img src="<%= partner.logo %>" class="w-100">
      </div>
      <div class="col-md-8 px-3">
        <div class="card-block px-3">
          <h4 class="card-title"><%= partner.name %></h4>
          <%= truncate(partner.description, length: 300) %>
          <div class="pt-3">
            <a href="#" class="btn btn-primary">Read More</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
