<div class="events_partial container-fluid mt-5">
  <div class="events_overlay container d-flex justify-content-center">
    <div id="navi-parent">
      <div id="navi">
        <h1>Events</h1>
      </div>
    </div>
  </div>
  <div class="events_container container">
    <div class="row">
      <div class="col-md-6 events_background">
        <%= image_tag(@events.first.banner_image_url) %>
      </div>
      <div class="col-md-6">
        <h4><%= @events.first.title %></h4>
        <p><%= @events.first.description %></p>
        <%= link_to "Read More", event_path(@events.first), class: "btn btn-primary" %>
        <div class="inline-block events_thumbs mt-4">
          <% @events.each do |event| %>
            <%= image_tag(event.banner_image_url) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
