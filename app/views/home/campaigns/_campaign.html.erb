<div class="col-lg-4 col-sm-6">
  <div class="card">
    <%= link_to campaign do %>
      <div class="card-topper" style="background-image: url(<%= campaign.banner_image_url %>);"></div>
    <% end %>
    <div class="card-block">
      <h4 class="card-title"><%= link_to "#{campaign.year} Campaign", campaign %></h4>
      <p class="tags"><%= raw campaign.tags.map { |t| link_to t.name, campaigns_path(tag: t.name) }.join(', ') %></p>
      <p class="published-date"><%= campaign.display_day_published %></p>
      <%= link_to campaign do %>
        <p class="card-text"><%= truncate(campaign.description, length: 130) %></p>
      <% end %>
    </div>
  </div>
</div>
